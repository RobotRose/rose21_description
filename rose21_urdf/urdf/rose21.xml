
<robot name="rose">

<link name="base_link">
  <visual>
    <origin xyz="0 0 0.135" rpy="0 0 0" />
    <geometry>
      <box size="0.8 0.6 0.27" />
    </geometry>
    <material name="ral9010">
      <color rgba=".8 .8 .8 1" />
    </material>
  </visual>
</link>

<joint name="lift_bottom" type="fixed">
  <parent link="base_link"/>
  <child link="lift_link"/>
</joint>

<link name="lift_link">
  <visual>
    <origin xyz="0 0 0.24" rpy="0 0 0" />
    <geometry>
      <box size="0.29 0.24 0.48" />
    </geometry>
    <material name="ral9010">
      <color rgba=".8 .8 .8 1" />
    </material>
  </visual>
</link>

<joint name="neck_pan_joint" type="fixed">
  <parent link="lift_link"/>
  <child link="neck_pan"/>
</joint>

<link name="neck_pan">
  <visual>
    <origin xyz="0.149 0 0" rpy="0 0 0" />
    <geometry>
      <box size="0.298 0.04 0.02" />
    </geometry>
    <material name="black">
      <color rgba=".1 .1 .1 1" />
    </material>
  </visual>
</link>

<joint name="neck_tilt_joint" type="fixed">
  <parent link="neck_pan"/>
  <child link="camera_center_link"/>
</joint>

<link name="camera_center_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <box size="0.06 0.28 0.04" />
    </geometry>
    <material name="black">
      <color rgba=".1 .1 .1 1" />
    </material>
  </visual>
</link>

<joint name="laser_fix_joint" type="fixed">
  <parent link="base_link"/>
  <child link="laser"/>
</joint>

<link name="laser">
  <!--See https://www.hokuyo-aut.jp/02sensor/07scanner/ubg_04lx_f01.html-->
  <visual>
    <origin xyz="-0.0125 0 -0.0166" rpy="0 0 0" />
    <geometry>
      <box size="0.075 0.06 0.06" />
    </geometry>
    <material name="darkblue">
      <color rgba="0.26, 0.329, 0.714 1" /> <!-- R: 69 G: 75 B: 101 -->
    </material>
  </visual>
</link>
</robot>
